<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Nueva Venta</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
            margin: 0;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h2 {
            color: #2c3e50;
            font-size: 2.8em;
            text-align: center;
            border-bottom: 3px solid #3498db;
            padding-bottom: 15px;
            margin-bottom: 30px;
            width: 90%;
            max-width: 800px;
        }

        form {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 800px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            align-items: center;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            padding-right: 15px;
            font-weight: bold;
            color: #333;
        }

        .col-sm-4 {
            flex: 0 0 40%;
            max-width: 40%;
        }

        .col-form-label {
            font-size: 1em;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            }

        button[type="submit"] {
            display: block;
            width: 100%;
            padding: 15px;
            font-size: 1.1em;
            color: #fff;
            background-color: #2ecc71;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            button[type="submit"]:hover {
                background-color: #27ae60;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        #productos-container {
            margin-bottom: 30px;
            padding: 20px;
            border: 1px solid #eee;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .col-sm-2 {
            width: 100%;
            max-width: 100%;
            margin-bottom: 8px;
            padding-right: 0;
        }

        .col-sm-4 {
            width: 100%;
            max-width: 100%;
        }

    </style>
</head>
<body>
    <h2>Crear Nueva Venta</h2>

    <form method="post" action="@Url.Action("Registrar", "Ventas")">
        <div id="productos-container">
            @foreach (var producto in Model.ListaProductos)
            {
                <div class="form-group row">
                    <label for="producto_@producto.ID_Producto" class="col-sm-2 col-form-label">@producto.Nombre</label>
                    <div class="col-sm-4">
                        <input type="number" name="cantidades[@producto.ID_Producto]" id="cantidad_@producto.ID_Producto" class="form-control" min="0" value="0" />
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Registrar Venta</button>
    </form>
</body>
</html>