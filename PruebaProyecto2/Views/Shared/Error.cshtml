@model GYMISFAMILY.Extensions.ErrorViewModel

<div class="text-center p-5">
    <h1 class="text-danger">¡Ocurrió un error!</h1>

    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> @Model.RequestId</p>
    }

    <div class="alert alert-danger">
        <h4>Mensaje del error:</h4>
        <p>@Model.ErrorMessage</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SolutionHint))
    {
        <div class="alert alert-info">
            <h4>Sugerencia:</h4>
            <p>@Model.SolutionHint</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.StackTrace))
    {
        <details class="mt-3">
            <summary>Ver detalles técnicos (StackTrace)</summary>
            <pre>@Model.StackTrace</pre>
        </details>
    }

    <a class="btn btn-primary mt-4" href="/">Volver al inicio</a>
</div>
