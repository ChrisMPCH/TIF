@model IEnumerable<GYMISFAMILY.Models.BaseDeDatos.TipoMembresia>

@{
    ViewData["Title"] = "Tipos de Membresías";
}

<h2>Membresías</h2>

<div class="button-container">
    <a asp-action="Create" class="btn btn-success mr-2"><i class="fas fa-plus mr-2"></i>Agregar Nuevo</a>
</div>

<div class="table-container">
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Tiempo (días)</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID_TipoMembresia</td>
                        <td>@item.Nombre</td>
                        <td>@item.Tipo</td>
                        <td>@item.Tiempo</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID_TipoMembresia" class="btn btn-secondary btn-sm mr-2"><i class="fas fa-edit mr-1"></i>Editar</a>
                            <form asp-action="Delete" asp-route-id="@item.ID_TipoMembresia" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este tipo de membresía?')"><i class="fas fa-trash-alt mr-1"></i>Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted" style="padding: 20px;">No hay tipos de membresías registrados.</p>
    }
</div>

<style>
    h2 {
        color: #337ab7;
        font-size: 3em;
        text-align: center;
        border-bottom: 4px solid #337ab7;
        padding-bottom: 20px;
        grid-column: 1 / -1; /* Ocupar todo el ancho */
    }

    .table {
        width: 95%;
        margin-top: 30px;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        border-radius: 15px; /* Bordes más redondeados para la tabla */
        overflow: hidden; /* Para que los bordes redondeados funcionen con el fondo del encabezado */
        border: 1px solid #ced4da; /* Borde sutil para la tabla */
    }

        .table thead th {
            background-color: #545b62; /* Gris oscuro para el encabezado */
            color: white;
            padding: 18px;
            text-align: left;
            font-weight: bold;
            font-size: 1.1em;
            border-bottom: 2px solid #495057; /* Borde inferior más oscuro para el encabezado */
            text-transform: uppercase; /* Convertir el texto del encabezado a mayúsculas */
            letter-spacing: 0.05em; /* Espaciado entre letras para un toque elegante */
        }

        .table tbody td {
            padding: 15px;
            border-bottom: 1px solid #f8f9fa; /* Borde inferior claro para las filas */
            font-size: 1em;
            color: #495057;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa; /* Fondo ligeramente diferente para filas pares */
        }

        .table tbody tr:hover {
            background-color: #e9ecef; /* Color al pasar el ratón sobre las filas */
            transition: background-color 0.2s ease-in-out;
        }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f8ff;
        margin: 0;
        padding: 40px;
        display: grid; /* Usar Grid para una estructura más definida */
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Columnas adaptativas */
        grid-template-rows: auto auto auto auto auto; /* Filas automáticas */
        gap: 30px; /* Espacio entre elementos de la grid */
        align-items: start; /* Alinear elementos al inicio de su celda */
        min-height: 100vh;
        justify-content: center; /* Centrar el contenido principal */
    }

    h2 {
        color: #337ab7;
        font-size: 2.5em; /* Reducir un poco el tamaño del título */
        text-align: center;
        border-bottom: 3px solid #337ab7; /* Reducir el grosor del borde */
        padding-bottom: 15px; /* Reducir el padding inferior */
        margin-bottom: 20px; /* Reducir el margen inferior */
        width: 90%;
        max-width: 1200px;
    }

    .button-container {
        margin-bottom: 20px;
        width: 90%;
        max-width: 1200px;
        text-align: right;
    }

    .btn {
        display: inline-block;
        padding: 10px 18px; /* Ajustar el padding de los botones */
        border: none;
        border-radius: 6px; /* Ajustar el radio del borde de los botones */
        color: white;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.9em; /* Ajustar el tamaño de la fuente de los botones */
        transition: background-color 0.3s ease, transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Ajustar la sombra de los botones */
        margin-left: 8px;
    }

        .btn:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

    .btn-success {
        background-color: #28a745;
    }

        .btn-success:hover {
            background-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .mr-2 {
        margin-right: 8px;
    }

    .btn-sm {
        padding: 6px 10px;
        font-size: 0.8em;
        border-radius: 4px;
    }

    .text-muted {
        color: #6c757d;
        font-size: 0.9em;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}