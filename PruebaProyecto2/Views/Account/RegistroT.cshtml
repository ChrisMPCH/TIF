@using GYMISFAMILY.Models.DTOs
@model RegistroTDTO

@{
    ViewData["Title"] = "Registro Tienda";
    ViewData["BodyClass"] = "with-margin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/registerT.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h2>Registro</h2>
    <img src="/Images/tifLogin.jpg" alt="Logo" style="width: 150px; display: block; margin: 1rem auto;" />
    <p class="team-family">TEAM IS FAMILY</p>

    <form asp-action="RegistroT" method="post">
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Apellido_P"></label>
            <input asp-for="Apellido_P" class="form-control" />
            <span asp-validation-for="Apellido_P" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Apellido_M"></label>
            <input asp-for="Apellido_M" class="form-control" />
            <span asp-validation-for="Apellido_M" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <style>
            .btn-registrar {
                background: var(--primary-red);
                color: var(--light);
                border: none;
                padding: 1rem 2rem;
                font-size: 1.125rem;
                font-weight: 600;
                text-transform: uppercase;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
                transition: background-color 0.3s ease;
            }

                .btn-registrar:hover {
                    background: #e60030;
                    transform: translateY(-1px);
                }

                .btn-registrar:active {
                    transform: translateY(1px);
                }
        </style>
        <button type="submit" class="btn btn-registrar">Registrar</button>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
